doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Document
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD', crossorigin='anonymous')
    link(rel='stylesheet', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css')
    - let jobOptions = ['Web Development','Machine Learning','Artificial Intelligence','Data Science','3D printing','Digital Marketing','Frontend Development','Backend Development']
    - let cities = ['Delhi','Kanpur','Jhansi','Lucknow','Ahamdabad','Jammu','Kashmir','Noida',"Hyderabad"]
  body
    nav.navbar.navbar-expand-lg.bg-body-tertiary
      .container-fluid
        a.navbar-brand(href='#') Navbar
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
          span.navbar-toggler-icon
        #navbarSupportedContent.collapse.navbar-collapse
          ul.navbar-nav.me-auto.mb-2.mb-lg-0
            li.nav-item
              a.nav-link.active(aria-current='page', href='#') Home
            li.nav-item
              a.nav-link(href='#') Link
            li.nav-item.dropdown
              a.nav-link.dropdown-toggle(href='#', role='button', data-bs-toggle='dropdown', aria-expanded='false')
                | Dropdown
              ul.dropdown-menu
                li
                  a.dropdown-item(href='#') Action
                li
                  a.dropdown-item(href='#') Another action
                li
                  hr.dropdown-divider
                li
                  a.dropdown-item(href='#') Something else here
            li.nav-item
              a.nav-link.disabled Disabled
          form.d-flex(role='search')
            input.form-control.me-2(type='search', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success(type='submit') Search
    header(class='bg-[#f8f8f8] h-[300vh] ')
      .wrapper.flex(class='w-[100%] h-[100vh]')
        .filter.bg-white.shadow-md.ml-11.mt-11.rounded-md.font-serif.p-3.pb-4(class='w-[350px] border-[1px]')
          form.flex.flex-col(action='')
            h2.text-center.text-lg.mb-2 Filter
            hr
            label.ml-1.mt-4(for='category') Category
            input.mt-2.p-2.rounded-md(class='border-[1px]', type='text', placeholder='Web Development', list='job_options')
            datalist#job_options
              each job in jobOptions
                option(value= job)
            .mt-4.flex.flex-col
              div
                input#paid.ml-1(type='checkbox', name='stipend_type')
                label(for='paid') Paid
              div
                input#unpaid.ml-1.mt-2(type='checkbox', name='stipend_type')
                label.inline-block(for='unpaid') Unpaid
            label.ml-1.mt-4(for='location') Location
              input#location.mt-2.p-2.rounded-md(class='border-[1px]', type='text', placeholder='e.g. Delhi', list="city_list")
              datalist#city_list 
                each city in cities
                  option(value= city)
            .mt-4.flex.flex-col
              div
                input#full_time.ml-1(type='checkbox', name='job_type')
                label(for='full_time') Full Time
              div
                input#part_time.ml-1.mt-2(type='checkbox', name='job_type')
                label.inline-block(for='part_time') Part Time
              button.mt-4.py-2.px-3.bg-blue-500.text-white.rounded-md Submit 
              
        .internCard_container.overflow-scroll.mt-6.ml-16.rounded-md#interncard_container.pr-3(class='w-[680px] h-[150vh]')
          each val in internD
            .internCard.rounded-md.bg-white.shadow-md.mt-4.p-4.w-full.mr-3(class='border-[1px]')
              div
                a(href= val.link)
                  h1.job_title.mb-2.text-lg.font-bold= val.title
                h2.company_name.mb-4.text-gray-400= val.company_name
                .flex.items-baseline
                  i.fa-solid.fa-house.mr-4
                  p Full Time
                .flex
                  .flex.flex-col.justify-center.mt-3
                    .flex.items-baseline.mt-2(class='ml-[2px]')
                      i.fa.fa-map-marker.mr-4.text-gray-600(aria-hidden='true')
                      p.text-gray-500 Location
                    p.ml-9= val.location
                  .flex.flex-col.justify-center.mt-3.ml-11
                    .flex.items-baseline.mt-2(class='ml-[2px]')
                      i.fa-solid.fa-money-bill.mr-4.text-gray-600
                      p.text-gray-500 Stipend
                    p.ml-10= val.stipend
              hr.my-4
              .flex.justify-end.items-center.gap-3
                a.text-blue-500(href= val.link) View Details
                a(href='')
                  button.py-2.px-3.bg-blue-500.text-white.rounded-md Apply Now
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js', integrity='sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN', crossorigin='anonymous')
    script(src='https://cdn.tailwindcss.com')
    